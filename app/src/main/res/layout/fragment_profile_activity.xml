<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Profile_activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="12dp"
        android:src="@drawable/pngtree_beautiful_admin_roles_line_vector_icon_png_image_2035379" />

    <TextView
        android:id="@+id/bigusername"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_gravity="right"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        android:text="USERNAME"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/username_id_change"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="190dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="Add new username"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password_id_change"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="235dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="Add new password"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#757575" />

    <Button
        android:id="@+id/Save_chnages_button"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#BA3ECF"
        android:text="Save"
        app:cornerRadius="15dp" />
</FrameLayout>